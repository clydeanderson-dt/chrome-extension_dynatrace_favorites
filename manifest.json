{
    "name": "Dynatrace Favorites Editor",
    "version": "1.0",
    "description": "This extension allows for persisting Favorites preferences between Dynatrace environments.",
    "permissions": ["activeTab","tabs","declarativeContent", "storage"],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon" : {
            "16": "images/dyna_fav16.png",
            "32": "images/dyna_fav32.png",
            "48": "images/dyna_fav48.png",
            "128": "images/dyna_fav128.png"
        }
    },
    "content_scripts": [
        {
            "exclude_matches":["https://sso-sprint.dynatracelabs.com/*"],
            "matches": ["https://*.dynatracelabs.com/*",
                "https://*.live.dynatrace.com/*",
                "https://*.managed.internal.dynatrace.com:*/e/*",
                "https://*.managed-dev.internal.dynatracelabs.com:*/e/*"],
            "run_at": "document_end",
            "js": ["js/injectScript.js"]
        }
    ],
    "web_accessible_resources": ["js/messenger.js"],
    "externally_connectable": {
        "matches": ["https://*.dynatracelabs.com/*",
            "https://*.live.dynatrace.com/*",
            "https://*.managed.internal.dynatrace.com:*/e/*",
            "https://*.managed-dev.internal.dynatracelabs.com:*/e/*"]
    },
    "icons": {
        "16": "images/dyna_fav16.png",
        "32": "images/dyna_fav32.png",
        "48": "images/dyna_fav48.png",
        "128": "images/dyna_fav128.png"
    },
    "manifest_version": 2
}